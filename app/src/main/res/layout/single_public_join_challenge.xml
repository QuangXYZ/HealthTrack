<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/single_public_challenge_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:backgroundTint="#F4F1FA"
    app:cardCornerRadius="20dp"

    app:strokeWidth="0dp"
    android:elevation="3dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/public_join_challenge_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="Thử thách tháng 3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="6">
                <TextView
                    android:id="@+id/public_join_challenge_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue"
                    android:textSize="14sp"
                    android:text="Bat dau sau 1 ngay" />
                <TextView
                    android:id="@+id/public_join_challenge_member"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="So nguoi tham gia"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tong so buoc"/>
                <TextView
                    android:id="@+id/public_join_challenge_step"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/pink"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:text="1.236"/>
                <ProgressBar
                    android:id="@+id/public_join_challenge_progress"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:indeterminate="false"
                    android:layout_marginTop="5dp"
                    android:max="100"
                    android:padding="5dp"
                    android:progress="50"
                    android:background="@drawable/progress_bar_background"
                    android:progressDrawable="@drawable/curved_progress_bar"
                    />
            </LinearLayout>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:src="@drawable/mountain"
                android:layout_weight="4"/>
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>