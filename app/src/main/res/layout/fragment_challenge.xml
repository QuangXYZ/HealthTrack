<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Views.Fragment.ChallengeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="horizontal"
            android:weightSum="4">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/faker"
                app:civ_border_width="2dp"
                app:civ_border_color="#FF000000"
                android:layout_weight="1"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="3"
                android:weightSum="3"
                android:orientation="vertical"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lee Sang-hyeok"
                    android:textColor="@color/blue"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Level: 2"
                    android:textColor="@color/blue"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bạn bè: 3"
                    android:textColor="@color/blue"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_weight="1"/>

            </LinearLayout>


        </LinearLayout>

        <Button
            android:id="@+id/fragment_challenge_create_button"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:textSize="16sp"
            android:text="Tạo thử thách"
            android:textStyle="bold"
            android:background="@drawable/button_background"
            android:textColor="@color/blue"
            app:backgroundTint="@color/orange"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:background="@drawable/tab_background"
            android:weightSum="2">

            <TextView
                android:id="@+id/fragment_challenge_tab1"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/tab_background_select"
                android:text="Cá nhân"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:elevation="10dp"/>

            <TextView
                android:id="@+id/fragment_challenge_tab2"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textStyle="bold"
                android:text="Cộng đồng"
                android:textColor="@color/blue"
                android:elevation="10dp"
                />
        </LinearLayout>
        <FrameLayout
            android:id="@+id/fragment_challenge_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           />

    </LinearLayout>

</ScrollView>